@model IEnumerable<Cafezinho.Models.Registro>
<h4>
Relat√≥rio de ativos em carteira</h4>
<br>
<style>
    .compra {
        color: #2c8e2c;
    }

    .venda {
        color: red;
    }

    .title-separator {
        border-bottom: 1px solid black;
    }

    .result-separator {
        border-bottom: 1px solid #CCCCCC;
    }
</style>

<table>
    <thead>
        <tr>
            <th style="padding-right: 100px;">
                @Html.DisplayNameFor(model => model.Ativo.Ticker)
            </th>
            <th style="padding-right: 100px;">
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th style="padding-right: 100px;">
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th style="padding-right: 100px;">
                @Html.DisplayNameFor(model => model.Transacao)
            </th>
            <th style="padding-right: 100px;">
                @Html.DisplayNameFor(model => model.DtTransacao)
            </th>
            <th style="padding-right: 100px;">
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th></th>
        </tr>
        <tr class="title-separator">
            <td colspan="7"></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticker)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @if (item.Transacao.ToString().ToLower() == "compra")
                    {
                        <span class="compra">@Html.DisplayFor(modelItem => item.Transacao)</span>
                    }
                    else
                    {
                        <span class="venda">@Html.DisplayFor(modelItem => item.Transacao)</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DtTransacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
            </tr>
            <tr class="result-separator">
                <td colspan="7"></td>
            </tr>
        }
    </tbody>
</table>
