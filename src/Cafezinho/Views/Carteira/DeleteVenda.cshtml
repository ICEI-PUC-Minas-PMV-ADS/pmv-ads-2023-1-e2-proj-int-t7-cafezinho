@model Cafezinho.Models.Venda

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Apagar cadastro de venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DtTransacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>
    
    <form asp-action="DeleteVenda">
        <input type="hidden" asp-for="VendaId" />
        <input type="submit" value="DeleteVenda" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
